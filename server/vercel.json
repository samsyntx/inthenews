{
  "builds": [
    {
      "src": "project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/swagger(.*)",
      "dest": "project/wsgi.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "project/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "project/wsgi.py"
    }
  ],
  "buildCommand": "python manage.py migrate"
}
